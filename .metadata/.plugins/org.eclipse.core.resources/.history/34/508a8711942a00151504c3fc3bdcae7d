package QQview;

import java.awt.TextField;

import javax.swing.*;

public class qqdialog extends JFrame{
       JTextArea jta;
       JTextField jtf;
	   JPanel jp1;
	   JButton jb;
	public qqdialog(String s)
	{
		super("与"+s+"交谈中");
		jta=new JTextArea();
		jtf=new JTextField();
		jb=new JButton("发送");
		jp1=new JPanel();
		jp1.add(jtf);
		jp1.add(jb);
		
		this.add(jta,"North");
		this.add(jp1,"South");
		
	}
}
