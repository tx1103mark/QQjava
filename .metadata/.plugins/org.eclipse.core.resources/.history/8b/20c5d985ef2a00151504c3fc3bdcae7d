package QQview;

import java.awt.*;
import java.awt.event.*;
import java.io.ObjectOutputStream;
import java.net.Socket;
import javax.swing.*;
import qq_common.message;
import client_model.client_serve;
public class qqdialog extends JFrame implements ActionListener{
       JTextArea jta;
       JTextField jtf;
	   JPanel jp1;
	   JButton jb;
	public qqdialog(String s)
	{
		super("与"+s+"交谈中");
		jta=new JTextArea();
		jtf=new JTextField(10);
		jtf.addActionListener(this);
		jb=new JButton("发送");
		jb.addActionListener(this);
		jp1=new JPanel();
		jp1.add(jtf);
		jp1.add(jb);
		
		this.add(jta);
		this.add(jp1,"South");
		this.setSize(300, 300);
		this.setIconImage(new ImageIcon("image\\qq.gif").getImage());
		this.setVisible(true);
		this.setDefaultCloseOperation(EXIT_ON_CLOSE);
		
		//获得登陆socket
		while(true)
		{
			try {
				ObjectOutputStream ob=new ObjectOutputStream(client_serve.so.getOutputStream());
			      message m =new message();
			} catch (Exception e) {
				// TODO: handle exception
			}
		}
		
		
	}
	@Override
	public void actionPerformed(ActionEvent e) {
		// TODO Auto-generated method stub
		if(e.getSource()==jb)
		{
			
		}
	}
}
